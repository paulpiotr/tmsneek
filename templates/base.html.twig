<!DOCTYPE html>
<html lang="pl">
    {% block head %}
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <title>
                {% block title %}
                    {{ 'Tmsneek'|trans }}
                {% endblock %}
            </title>
            {% block stylesheets %}
                <link href="{{ asset('vendor/@fortawesome/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css"/>
                <link href="{{ asset('vendor/startbootstrap-sb-admin/css/sb-admin.min.css') }}" rel="stylesheet" type="text/css"/>
            {% endblock %}
            {% block javascript %}
                <script src="{{ asset('vendor/jquery/dist/jquery.min.js') }}" type="text/javascript"></script>
                <script src="{{ asset('vendor/bootstrap/dist/js/bootstrap.bundle.min.js') }}" type="text/javascript"></script>
                <script src="{{ asset('vendor/jquery.easing/jquery.easing.min.js') }}" type="text/javascript"></script>
                <script src="{{ asset('vendor/bootstrap-notify/bootstrap-notify.min.js') }}" type="text/javascript"></script>
            {% endblock %}
        </head>
    {% endblock %}
    {% block body %}
        <body id="page-top">
            {% block navbar %}
                {% include 'base/navbar.html.twig' ignore missing %}
            {% endblock %}
            <div id="wrapper">
                {% block sidebar %}
                    {% include 'base/sidebar.html.twig' ignore missing %}
                {% endblock %}
                <div id="content-wrapper">
                    <div class="container-fluid">
                        {% block container %}
                        {% endblock %}
                    </div>
                </div>
            </div>
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
            {% block javascriptsinline %}
                {% include 'base/notice.html.twig' ignore missing %}
            {% endblock %}
        </body>
    {% endblock %}
</html>
